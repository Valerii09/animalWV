<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="QuizApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/default_option_border_bg</item>
        <item name="android:windowNoTitle">true</item> <!-- Установите в true -->
        <item name="android:windowActionBar">false</item> <!-- Установите в false -->
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:icon">@drawable/baseline_add_reaction_24</item>
        <!-- Другие атрибуты стиля -->
    </style>

    <!-- Стиль для кнопок -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста кнопки -->
        <item name="android:background">@drawable/button_bg</item> <!-- Фон кнопки -->
        <item name="android:padding">16dp</item> <!-- Отступы внутри кнопки -->
        <item name="android:textSize">14sp</item> <!-- Размер текста кнопки -->
    </style>

    <!-- Стиль для полей ввода -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item> <!-- Цвет текста поля ввода -->
        <item name="android:background">@drawable/edittext_background</item> <!-- Фон поля ввода -->
        <item name="android:padding">8dp</item> <!-- Отступы внутри поля ввода -->
        <item name="android:textSize">16sp</item> <!-- Размер текста поля ввода -->
    </style>

    <style name="RadioButtonStyle">
        <!-- Задайте цвет фона RadioButton в состоянии включено -->
        <item name="android:buttonTint">@color/white</item>

        <!-- Задайте цвет фона RadioButton в состоянии выключено -->

        <!-- Другие атрибуты стиля, если необходимо -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>


</resources>